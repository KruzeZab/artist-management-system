{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src/**/*",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettify": "prettier --write src/**/*.ts",
    "prettify:check": "prettier --check src/**/*.ts",
    "stylelint": "stylelint src/**/*.css",
    "stylelint:fix": "stylelint src/**/*.css --fix",
    "prepare": "cd ../ && husky ./frontend/.husky"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "yarn prettify",
      "yarn lint:fix"
    ],
    "./src/**/*.css": [
      "yarn prettify",
      "yarn stylelint:fix"
    ],
    ".src/**/*.test.ts": [
      "yarn test"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "3.5.3",
    "stylelint": "^16.16.0",
    "stylelint-config-standard": "^37.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.2.0"
  }
}
