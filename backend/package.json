{
  "name": "artist-management-system",
  "version": "1.0.0",
  "description": "A simple admin panel to manage records of artists.",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc -p .",
    "lint": "eslint src/**/*",
    "lint:fix": "eslint src/**/* --fix",
    "prettify": "prettier --write src/**/*",
    "prettify:check": "prettier --check src/**/*",
    "prepare": "cd ../ && husky ./backend/.husky"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "yarn prettify",
      "yarn lint:fix"
    ],
    ".src/**/*.test.ts": [
      "yarn test"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.9",
    "prettier": "3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  }
}
