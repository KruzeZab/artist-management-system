{
  "name": "artist-management-system",
  "version": "1.0.0",
  "description": "A simple admin panel to manage records of artists.",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "NODE_ENV=development nodemon src/index.ts",
    "db:init": "NODE_ENV=development ts-node src/database/setup.ts",
    "build": "tsc -p .",
    "lint": "eslint src/**/*",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettify": "prettier --write src/**/*.ts",
    "prettify:check": "prettier --check src/**/*.ts",
    "prepare": "cd ../ && husky ./backend/.husky"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "yarn prettify",
      "yarn lint:fix"
    ],
    ".src/**/*.test.ts": [
      "yarn test"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "@types/pg": "^8.11.11",
    "dotenv": "^16.4.7",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.9",
    "prettier": "3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "dependencies": {
    "pg": "^8.14.0"
  }
}
